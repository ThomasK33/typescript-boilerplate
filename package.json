{
  "name": "typescript-boilerplate",
  "version": "0.1.1",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json && cp tsconfig.json dist/",
    "build:clean": "run-s clean build",
    "clean": "cd dist && rm -rf *",
    "dev": "nodemon",
    "lint": "tslint -p tsconfig.json",
    "start": "run-s build:clean start:local",
    "start:local": "TS_NODE_PROJECT=dist/ node -r tsconfig-paths/register dist/src/index.js",
    "start:ts": "ts-node -r tsconfig-paths/register src/index.ts",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register 'tests/**/*.spec.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThomasK33/typescript-boilerplate.git"
  },
  "author": "Thomas Kosiewski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ThomasK33/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/ThomasK33/typescript-boilerplate#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/debug": "0.0.30",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.6.47",
    "chai": "^4.2.0",
    "debug": "^3.2.6",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "ts-node": "^5.0.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.15.0",
    "typescript": "^2.9.2"
  }
}
