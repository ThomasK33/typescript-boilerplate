{
  "name": "typescript-boilerplate",
  "version": "0.1.1",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:clean": "npm run clean && tsc -p tsconfig.json",
    "clean": "cd dist && rm -rf *",
    "lint": "tslint -p tsconfig.json",
    "start": "node dist/index.js",
    "start:ts": "ts-node src/index.ts",
    "start:dev": "nodemon",
    "start:local": "npm run build && node dist/index.js",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register 'tests/**/*.spec.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThomasK33/typescript-boilerplate.git"
  },
  "author": "Thomas Kosiewski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ThomasK33/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/ThomasK33/typescript-boilerplate#readme",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/debug": "0.0.30",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "debug": "^3.1.0",
    "mocha": "^5.0.1",
    "nodemon": "^1.17.1",
    "ts-node": "^5.0.1",
    "tsconfig-paths": "^3.1.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
