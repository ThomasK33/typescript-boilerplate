	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "DEBUG",
			"args": [],
			"cwd": "${workspaceRoot}",
			"outFiles": [
				"${workspaceRoot}/dist/*"
			],
			"preLaunchTask": "compile",
			"program": "${workspaceRoot}/src/index.ts",
			"runtimeArgs": [
				"--nolazy"
			],
			"runtimeExecutable": null,
			"sourceMaps": true,
			"stopOnEntry": false,
		},
		{
			"type": "node",
			"request": "launch",
			"name": "DEBUG Verbose",
			"args": [],
			"cwd": "${workspaceRoot}",
			"env": {
				"DEBUG": "*"
			},
			"outFiles": [
				"${workspaceRoot}/dist/*"
			],
			"preLaunchTask": "compile",
			"program": "${workspaceRoot}/src/index.ts",
			"runtimeArgs": [
				"--nolazy"
			],
			"runtimeExecutable": null,
			"sourceMaps": true,
			"stopOnEntry": false,
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceRoot}"
		}
	]
